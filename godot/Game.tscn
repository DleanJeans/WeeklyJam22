script/source = "extends Node2D

onready var game = get_parent()

var maps = []

var index = maps.size() - 1

func _ready():
	var maps_path = \"res://maps\"
	
	var directory = Directory.new()
	directory.open(maps_path)
	directory.list_dir_begin()
	
	while true:
		var file = directory.get_next()
		if file.ends_with(\".tscn\"):
			var map_path = \"%s/%s\" % [maps_path, file]
			maps.append(load(map_path))
		elif file == \"\":
			break
	
	directory.list_dir_end()

func next_map():
	index += 1
	if index >= maps.size():
		index = 0
	
	game.get_node(\"PlayerManager\").disable_ai()
	game.get_node(\"GameTimer\").stop()
	
	game.get_node(\"Map\").free()
	var map = maps[index].instance()
	game.add_child(map)
	game.move_child(map, 0)
	game.get_node(\"MainMenu/MapButton\").text = \"Map: %s\" % map.name
	game.emit_signal(\"game_loaded\")
	game.showing_winner = false
	game.get_node(\"PlayerManager\").enable_ai()"

